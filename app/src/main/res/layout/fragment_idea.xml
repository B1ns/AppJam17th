<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.IdeaFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/IdeaappbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/idaeNavigationDrawerBtn"
                android:layout_width="25dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/mainsearchLayout"
                android:background="@drawable/ic_dehaze"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/mainsearchLayout"
                app:layout_constraintLeft_toRightOf="@+id/idaeNavigationDrawerBtn"
                android:layout_width="340dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_main_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">


                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_search_black_24dp"
                    />

                <EditText
                    android:id="@+id/ideaSearchEt"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/searchIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#00ff0000"
                    android:hint="검색어를 입력해 주세요"
                    android:textColorHint="@android:color/white"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/ideaTab"
            app:tabMode="scrollable"
            app:tabTextColor="@android:color/black"
            app:tabBackground="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/colorPrimary">
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ldeaViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>